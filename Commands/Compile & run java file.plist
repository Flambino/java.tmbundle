#       activate
#       do script "cd '$TM_DIRECTORY'; java '${TM_FILENAME%.java}'"
#    end tell
# EOF
</string>
	<key>input</key>
	<string>none</string>
	<key>keyEquivalent</key>
	<string>@b</string>
	<key>name</key>
	<string>Compile &amp; Run Single File</string>
	<key>output</key>
	<string>showAsHTML</string>
	<key>scope</key>
	<string>source.java</string>
	<key>uuid</key>
