{
	name = "Java Source";
	
	fileTypes = ( java );
	
	foldingStartMarker = "\\{\\s*$";
	foldingStopMarker = "^\\s*\\}";

	increaseIndentPattern = "^.*(\\{[^}\"']*|\\([^)\"']*)$";

	smartTypingPairs = (
        ( "(", ")" ),
	    ( "[", "]" ),
	    ( "{", "}" ),
        ( "\"", "\"" ), 
	    ( "'", "'" )
	);
	
	highlightPairs = (
	    ( "(", ")" ),
	    ( "[", "]" ),
	    ( "{", "}" )
	);
	
	foregroundColor = "black";
	backgroundColor = "white";
	
	patterns = (

		{
			name = "comments.block.java";
			begin = "/\\*";
			patterns = (
			    {
					name = "javadoc params";
					match = "\\\*\\s*@(param)\\s*([a-z][a-zA-Z0-9_]+)\\s*";
					"foregroundColor[1]" = "#669933";
					"foregroundColor[2]" = "black";
				},
			    {
					name = "misc javadoc attributes";
					match = "\\\*\\s*@([a-zA-Z0-9_-]+)\\s*";
					"foregroundColor[1]" = "#669933";
				},
			);
			end = "\\*/";
			fontStyle = ( italic );
			foregroundColor = "red";
		},
		
		{
			name = "comments.line.java";
			match = "//.*$";
			foregroundColor = "red";
			fontStyle = ( italic );
		},
		
		{
			name = "keywords.control.java";
			match = "\\<(return|goto|if|else|case|default|switch|break|continue|while|do|for|instanceof|super|this|import|implements|extends|package|class|interface|throw|throws|try|catch|finally|void|new|null)\\>"; 

			fontStyle = ( bold );
			foregroundColor = "#0066ff";
		},
		
		{
			name = "keywords.storage.java";
			match = "\\<(public|protected|private|const|abstract|synchronized|final|static|threadsafe|transient|native|volatile)\\>";
			fontStyle = ( bold );
			foregroundColor = "blue";
		},
		
		{
			name = "constants.numeric.java";
			match = "\\<((0(x|X)[0-9a-fA-F]*)|(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)([LlFfUuDd]|UL|ul|)?\\>";
			foregroundColor = "#009966";
		},
		
		{
			name = "strings.double-quoted.java";
			begin = "\"";
			end = "\"";
			swallow = "\\\\.";
			foregroundColor = "#FF0066";
		},

		{
			name = "strings.single-quoted.java";
			begin = "'";
			end = "'";
			swallow = "\\\\.";
			foregroundColor = "#669933";
		},
		
		{
	        name = "keywords.types.java";
	        match = "\\b([A-Z][A-Za-z0-9]+)\\b";
	        "foregroundColor[1]" = "#CC33FF";
		},
	);
	uuid = "2B449DF6-6B1D-11D9-94EC-000D93589AF6";
}
