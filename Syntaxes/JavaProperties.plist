{
	/*----
	basic java properties dictionary for textmate
	------*/
	
	name = "Java Properties";
	fileTypes = ( properties );

	foregroundColor = "#333333";
	backgroundColor = "#ffffff";

	patterns = (
		/* comments */
		{
			name = "Comments";
			match = "[#!].+$";
			foregroundColor = "red";
		},

 		/* KEY = VALUE PAIRS */
 		/*
         * Not compliant with the properties file spec, but this works me, and
         * I'm the one who counts around here.
 		 */
		{
			name = "Key";
			match = "^([^:=]+)[:=](.*)$";
			"foregroundColor[1]" = "#00FF00";
			"foregroundColor[2]" = "#0000FF";
		},
	);
}
